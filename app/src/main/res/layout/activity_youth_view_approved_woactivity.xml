<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.YouthViewApprovedWOActivity"
    android:background="#BDEDFB">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="128dp"
        android:layout_height="125dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073"
        app:srcCompat="@drawable/shovel_hero_logo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="255dp"
        android:layout_height="32dp"
        android:text="Approved Work Order"
        android:textAlignment="center"
        android:textColor="#2991C8"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.271" />

    <ImageView
        android:id="@+id/imgProperty"
        android:layout_width="116dp"
        android:layout_height="105dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="408dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.166" />

    <TextView
        android:id="@+id/txtLocation"
        android:layout_width="258dp"
        android:layout_height="33dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="348dp"
        android:text="Location: "
        android:textColor="#2991C8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProperty" />

    <Button
        android:id="@+id/btnGPS"
        android:layout_width="214dp"
        android:layout_height="53dp"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="310dp"
        android:backgroundTint="#2991C8"
        android:text="Get GPS direction"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLocation"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtApprovalStatus"
        android:layout_width="229dp"
        android:layout_height="44dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="216dp"
        android:text="Approval Status:"
        android:textColor="#2991C8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGPS" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="110dp"
        android:layout_height="49dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="216dp"
        android:backgroundTint="#2991C8"
        android:text="Confirm"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btnViewWO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtApprovalStatus"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnViewWO"
        android:layout_width="246dp"
        android:layout_height="49dp"
        android:layout_marginStart="86dp"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#2991C8"
        android:text="View Open Work Orders"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConfirm" />

    <Button
        android:id="@+id/btnCancelYouth"
        android:layout_width="110dp"
        android:layout_height="49dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="#2991C8"
        android:text="Cancel"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btnViewWO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnConfirm"
        app:layout_constraintTop_toBottomOf="@+id/txtApprovalStatus" />

</androidx.constraintlayout.widget.ConstraintLayout>